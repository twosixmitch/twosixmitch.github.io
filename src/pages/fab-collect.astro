---
import Base from '../layouts/Base.astro';
import fabCollectIcon from '../assets/fab_collect_app_icon__180.png';
import screenshot1 from '../assets/fab_collect_1_products.png';
import screenshot2 from '../assets/fab_collect_2_product_cards.png';
import screenshot3 from '../assets/fab_collect_3_card_details.png';
---

<Base 
  title="FaB Collect - TwoSixMitch" 
  description="Browse Flesh and Blood products and explore cards. View product details and card information for the Flesh and Blood trading card game. Download FaB Collect on the App Store."
>
  <!-- Hero Section -->
  <section class="py-32 text-center">
    <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
      <div class="w-[120px] h-[120px] mx-auto mb-8 flex items-center justify-center">
        <img 
          src={fabCollectIcon.src} 
          alt="FaB Collect App Icon" 
          class="w-full h-full object-contain rounded-2xl"
        />
      </div>
      
      <h1 class="text-5xl font-bold tracking-tight text-secondary-900 dark:text-white mb-6">
        FaB Collect
      </h1>
      
      <p class="text-xl text-secondary-600 dark:text-secondary-300 mb-8 max-w-2xl mx-auto">
        Browse Flesh and Blood products and explore the cards within them. View detailed information about products and individual cards.
      </p>

      <a
        href="#"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center justify-center rounded-2xl bg-primary-600 px-10 py-4 text-lg font-medium text-white shadow-lg hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 transition-all transform hover:scale-105"
      >
        <svg class="mr-3 h-6 w-6" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
        </svg>
        Download on App Store
      </a>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20 bg-secondary-50 dark:bg-secondary-800/50">
    <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-center text-secondary-900 dark:text-white mb-16">
        Key Features
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-primary-100 dark:bg-primary-900 rounded-2xl mx-auto mb-4 flex items-center justify-center">
            <span class="text-primary-600 dark:text-primary-400 text-2xl">üì¶</span>
          </div>
          <h3 class="text-lg font-semibold text-secondary-900 dark:text-white mb-2">Browse Products</h3>
          <p class="text-secondary-600 dark:text-secondary-400">Explore available Flesh and Blood products and see what's available</p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-primary-100 dark:bg-primary-900 rounded-2xl mx-auto mb-4 flex items-center justify-center">
            <span class="text-primary-600 dark:text-primary-400 text-2xl">üÉè</span>
          </div>
          <h3 class="text-lg font-semibold text-secondary-900 dark:text-white mb-2">View Cards</h3>
          <p class="text-secondary-600 dark:text-secondary-400">See all the cards within each product and browse through your collection</p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-primary-100 dark:bg-primary-900 rounded-2xl mx-auto mb-4 flex items-center justify-center">
            <span class="text-primary-600 dark:text-primary-400 text-2xl">üîç</span>
          </div>
          <h3 class="text-lg font-semibold text-secondary-900 dark:text-white mb-2">Card Details</h3>
          <p class="text-secondary-600 dark:text-secondary-400">View detailed information about each card including images and specifications</p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-primary-100 dark:bg-primary-900 rounded-2xl mx-auto mb-4 flex items-center justify-center">
            <span class="text-primary-600 dark:text-primary-400 text-2xl">üì±</span>
          </div>
          <h3 class="text-lg font-semibold text-secondary-900 dark:text-white mb-2">Easy Navigation</h3>
          <p class="text-secondary-600 dark:text-secondary-400">Intuitive interface designed for browsing products and cards with ease</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Screenshots Section -->
  <section class="py-20">
    <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-secondary-900 dark:text-white mb-6">
          See FaB Collect in Action
        </h2>
        <p class="text-lg text-secondary-600 dark:text-secondary-300 max-w-2xl mx-auto">
          Experience the intuitive interface designed to make browsing Flesh and Blood products and cards simple and enjoyable.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="bg-white dark:bg-secondary-800 rounded-2xl shadow-xl p-4 mb-4">
            <img 
              src={screenshot1.src} 
              alt="FaB Collect App Screenshot 1" 
              class="w-full h-auto rounded-xl mx-auto"
            />
          </div>
          <h3 class="text-lg font-semibold text-secondary-900 dark:text-white">Product Browsing</h3>
          <p class="text-sm text-secondary-600 dark:text-secondary-400">Browse and explore available products</p>
        </div>
        
        <div class="text-center">
          <div class="bg-white dark:bg-secondary-800 rounded-2xl shadow-xl p-4 mb-4">
            <img 
              src={screenshot2.src} 
              alt="FaB Collect App Screenshot 2" 
              class="w-full h-auto rounded-xl mx-auto"
            />
          </div>
          <h3 class="text-lg font-semibold text-secondary-900 dark:text-white">Product Cards</h3>
          <p class="text-sm text-secondary-600 dark:text-secondary-400">View cards within each product</p>
        </div>
        
        <div class="text-center">
          <div class="bg-white dark:bg-secondary-800 rounded-2xl shadow-xl p-4 mb-4">
            <img 
              src={screenshot3.src} 
              alt="FaB Collect App Screenshot 3" 
              class="w-full h-auto rounded-xl mx-auto"
            />
          </div>
          <h3 class="text-lg font-semibold text-secondary-900 dark:text-white">Card Details</h3>
          <p class="text-sm text-secondary-600 dark:text-secondary-400">Detailed information about each card</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-20">
    <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-secondary-900 dark:text-white mb-6">
          Get in Touch
        </h2>
        <p class="text-lg text-secondary-600 dark:text-secondary-300 max-w-2xl mx-auto">
          Have questions about FaB Collect? Need support or want to share feedback? We'd love to hear from you!
        </p>
      </div>
      
      <div class="bg-white dark:bg-secondary-800 rounded-2xl shadow-xl p-4 lg:p-6">
        <div class="flex justify-center">
          <div id="form-container" class="w-full max-w-2xl" style="height: 850px; overflow: hidden;">
            <iframe 
              id="contact-form-iframe"
              src="https://docs.google.com/forms/d/e/1FAIpQLSc-3mf1pKwSNg47W_R6xIxxY4bG2GBBLEc3htsAp4meOdSbfw/viewform?embedded=true" 
              width="100%" 
              height="850" 
              frameborder="0" 
              marginheight="0" 
              marginwidth="0"
              style="border: none; overflow: hidden;"
              title="Contact Form"
            >
              Loading‚Ä¶
            </iframe>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Disclaimer Section -->
  <section class="py-12 border-t border-secondary-200 dark:border-secondary-800">
    <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
      <div class="bg-secondary-50 dark:bg-secondary-800/50 rounded-lg p-6">
        <p class="text-sm text-secondary-600 dark:text-secondary-400 text-center leading-relaxed">
          <strong class="text-secondary-900 dark:text-white">FaB Collect is in no way affiliated with Legend Story Studios.</strong>
          <br /><br />
          Legend Story Studios¬Æ, Flesh and Blood‚Ñ¢, and set names are trademarks of Legend Story Studios. Flesh and Blood characters, cards, logos, and art are property of Legend Story Studios.
        </p>
      </div>
    </div>
  </section>

  <!-- Privacy Policy Link -->
  <section class="py-8 text-center border-t border-secondary-200 dark:border-secondary-800">
    <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:px-8">
      <a
        href="/fab-collect/privacy-policy"
        class="text-sm text-secondary-500 hover:text-primary-600 dark:text-secondary-400 dark:hover:text-primary-400 transition-colors"
      >
        Privacy Policy
      </a>
    </div>
  </section>

  <script>
    // Attempt to auto-resize the iframe based on content
    // Note: Google Forms are cross-origin, so direct access isn't possible
    // This listens for postMessage events if Google Forms sends them
    window.addEventListener('message', (event) => {
      // Only accept messages from Google Forms domain
      if (event.origin !== 'https://docs.google.com') return;
      
      const iframe = document.getElementById('contact-form-iframe');
      const container = document.getElementById('form-container');
      
      if (iframe && container && event.data && typeof event.data === 'object') {
        // If Google Forms sends height information
        if (event.data.type === 'resize' && event.data.height) {
          const newHeight = Math.min(event.data.height + 20, 1000); // Add padding, max 1000px
          iframe.style.height = newHeight + 'px';
          container.style.height = newHeight + 'px';
        }
      }
    });

    // Fallback: Try to detect when iframe loads and adjust if possible
    document.addEventListener('DOMContentLoaded', () => {
      const iframe = document.getElementById('contact-form-iframe');
      if (iframe) {
        iframe.addEventListener('load', () => {
          // Unfortunately, we can't access cross-origin iframe content
          // The height is set to 850px which should fit most forms
          // Adjust manually if needed
        });
      }
    });
  </script>
</Base>

