---
import { SITE, OPEN_GRAPH } from '../config.js';

export interface Props {
  title: string;
  description?: string;
  image?: string;
  canonicalURL?: string;
  noindex?: boolean;
  noimageindex?: boolean;
  type?: 'website' | 'article';
  publishDate?: Date;
  modifiedDate?: Date;
  author?: string;
  section?: string;
  tags?: string[];
}

const {
  title,
  description = SITE.description,
  image,
  canonicalURL,
  noindex = false,
  noimageindex = false,
  type = 'website',
  publishDate,
  modifiedDate,
  author,
  section,
  tags = [],
} = Astro.props;

const canonicalURLString = canonicalURL || Astro.url.href;
const imageURL = image ? new URL(image, Astro.url) : new URL(OPEN_GRAPH.image.src, Astro.url);
const publishDateString = publishDate ? publishDate.toISOString() : undefined;
const modifiedDateString = modifiedDate ? modifiedDate.toISOString() : undefined;
---

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />
<meta name="robots" content={noindex ? 'noindex,nofollow' : 'index,follow'} />
<meta name="googlebot" content={noindex ? 'noindex,nofollow' : 'index,follow'} />
<meta name="googlebot-news" content={noimageindex ? 'nosnippet' : 'snippet'} />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURLString} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={canonicalURLString} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={imageURL.href} />
<meta property="og:image:alt" content={OPEN_GRAPH.image.alt} />
<meta property="og:site_name" content={SITE.name} />
<meta property="og:locale" content={SITE.defaultLanguage} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalURLString} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={imageURL.href} />
<meta property="twitter:image:alt" content={OPEN_GRAPH.image.alt} />
<meta property="twitter:site" content={OPEN_GRAPH.twitter} />

<!-- Article specific meta tags -->
{type === 'article' && (
  <>
    {publishDateString && <meta property="article:published_time" content={publishDateString} />}
    {modifiedDateString && <meta property="article:modified_time" content={modifiedDateString} />}
    {author && <meta property="article:author" content={author} />}
    {section && <meta property="article:section" content={section} />}
    {tags.map((tag) => <meta property="article:tag" content={tag} />)}
  </>
)}

<!-- Additional meta tags -->
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta name="generator" content={Astro.generator} />
<meta name="theme-color" content="#3b82f6" />
<meta name="msapplication-TileColor" content="#3b82f6" />
